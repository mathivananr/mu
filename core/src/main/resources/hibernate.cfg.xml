<!-- The following doctype doesn't work when offline, so default to old one, 
	which does work. <!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate 
	Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd"> -->
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="show_sql">false</property>
    	<property name="format_sql">false</property>
		<mapping class="com.mu.model.User" />
		<mapping class="com.mu.model.Role" />
		<mapping class="com.mu.model.Recharge" />
		<mapping class="com.mu.model.SupportRequest" />
		<mapping class="com.mu.model.NetworkOperator" />
		<mapping class="com.mu.model.RcErrorCode" />
		<mapping class="com.mu.model.Advise" />
		<mapping class="com.mu.model.MerchantType" />
		<mapping class="com.mu.model.Merchant" />
		<mapping class="com.mu.model.Payment" />
	</session-factory>
</hibernate-configuration>
